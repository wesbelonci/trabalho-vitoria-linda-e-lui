datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Type {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  color       String?
  description String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  PokemonType PokemonType[]

  @@map("types")
}

model Pokemon {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  height      Float?
  weight      Float?
  description String?
  imageUrl    String?
  baseHp      Int           @default(50)
  baseAttack  Int           @default(50)
  baseDefense Int           @default(50)
  baseSpeed   Int           @default(50)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  PokemonType PokemonType[]

  @@map("pokemons")
}

model PokemonType {
  id        Int      @id @default(autoincrement())
  pokemonId Int
  typeId    Int
  type      Type     @relation(fields: [typeId], references: [id])
  pokemon   Pokemon  @relation(fields: [pokemonId], references: [id])
  createdAt DateTime @default(now())

  @@unique([pokemonId, typeId])
  @@map("pokemon_types")
}
